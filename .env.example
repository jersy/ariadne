# Ariadne LLM Configuration
# Copy this file to .env and fill in your API keys

# LLM Provider Selection
# Options: openai, deepseek, ollama
ARIADNE_LLM_PROVIDER=deepseek

# DeepSeek Configuration
ARIADNE_DEEPSEEK_API_KEY=your_deepseek_api_key_here
ARIADNE_DEEPSEEK_BASE_URL=https://api.deepseek.com
ARIADNE_DEEPSEEK_MODEL=deepseek-chat

# OpenAI Configuration (used for embeddings)
ARIADNE_OPENAI_API_KEY=your_openai_api_key_here
ARIADNE_OPENAI_MODEL=gpt-4o-mini
ARIADNE_OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Ollama Configuration (for local models)
# ARIADNE_OLLAMA_BASE_URL=http://localhost:11434
# ARIADNE_OLLAMA_MODEL=deepseek-r1:7b
# ARIADNE_OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Vector Database Path
ARIADNE_VECTOR_DB_PATH=~/.ariadne/vectors
